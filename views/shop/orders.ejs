<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/orders.css">

    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(orders.length <=0) {%>
            <h1>Nothing there!</h1>
            <% } else { %>
                <ul>
                    <% orders.forEach(order => { %>
                        <li>
                            <h2>#<%= order._id %> <a href="/orders/<%= order._id %>" target="_blank">Download Invoice</a></h2>
                            <ul>
                                <% order.products.forEach((product)=>{ %>
                                <li><%= product.productData.title %> (<%= product.quantity %>) </li>
                                <% }) %>
                            </ul>
                        </li>
                    <% }) %>
                </ul>
            <% } %> 
        </main>
        <%- include('../includes/end.ejs') %>